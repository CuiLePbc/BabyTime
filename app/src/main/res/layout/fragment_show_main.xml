<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/eatDataCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/sleepDataCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bodyDataCardView"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/excretionDataCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sleepDataCardView"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bodyDataCardView" />

        <android.support.v7.widget.CardView
            android:id="@+id/sleepDataCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/excretionDataCardView"
            app:layout_constraintTop_toBottomOf="@+id/eatDataCardView" />

        <android.support.v7.widget.CardView
            android:id="@+id/bodyDataCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/excretionDataCardView"
            app:layout_constraintEnd_toStartOf="@+id/eatDataCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fabMenuBgFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuToBodyData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_fab_margin"
            android:layout_marginBottom="296dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:alpha="0.0"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_add_white_24dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            app:elevation="8dp"
            android:layout_gravity="bottom|end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuToEatData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_fab_margin"
            android:layout_marginBottom="232dp"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:alpha="0.0"
            android:clickable="false"
            android:focusable="false"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            app:elevation="8dp"
            android:layout_gravity="bottom|end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuToExcretionData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_fab_margin"
            android:layout_marginBottom="168dp"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:alpha="0.0"
            android:clickable="false"
            android:focusable="false"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            app:elevation="8dp"
            android:layout_gravity="bottom|end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuToSleepData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_fab_margin"
            android:layout_marginBottom="104dp"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:alpha="0.0"
            android:clickable="false"
            android:focusable="false"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            app:elevation="8dp"
            android:layout_gravity="bottom|end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mainshowFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:transitionName="@string/fab_shared_name"
            app:pressedTranslationZ="12dp"
            app:elevation="8dp"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_gravity="bottom|end" />

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>